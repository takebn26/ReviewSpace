.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name
        = current_user.name
      = link_to new_group_path, class: 'chat-side__user--new-group' do
        = fa_icon 'pencil-square-o'
      = link_to edit_user_registration_path, class: 'chat-side__user--edit-user' do
        = fa_icon 'cog'
  .chat-side__groups
    .chat-side__groups-list
      = render partial: 'groups/group', collection: @groups
